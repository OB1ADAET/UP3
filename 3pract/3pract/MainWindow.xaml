<Window x:Class="_3pract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3pract"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn1" Grid.Column="0" Height="30px" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btn1_Click" Content="страница 1"/>
        <Button x:Name="btn2" Grid.Column="1" Height="30px" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btn2_Click" Content="страница 2"/>
        <Frame x:Name="fr1" Grid.Column="0" Grid.ColumnSpan="2" Height="350px" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
